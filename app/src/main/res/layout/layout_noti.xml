<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#2B4B81">
        <TextView
                android:text="recorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="12sp"
                android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="开始录音"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
            <Button
                    android:text="结束录音"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"/>
            <Button
                    android:text="暂停/继续"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="返回应用界面"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button4"/>
    </LinearLayout>
</LinearLayout>
